<!doctype html>
<html lang="tr">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <!-- Bootstrap Icons CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">

  <link rel="stylesheet" href="~/css/styles.css">

  <title>Tarih Blog</title>
</head>

<body>
  <div class="container bg-light">
    <div class="row">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="~/resimler/logo.jpg" width="100" height="50" alt="Türk Tarihi"></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                      <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Arşiv</a>
                  </li>
                  <li class="nav-item dropdown">
                      <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                          Makale Yönetimi
                      </a>
                      <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                          <li><a class="dropdown-item" asp-controller="Makale" asp-action="Create"><i class="bi bi-plus-circle-fill"></i> Yeni Makale Ekle</a></li>
                          <li><a class="dropdown-item" asp-controller="Makale" asp-action="Index"><i class="bi bi-list"></i> Makaleleleri Listele</a></li>
                      </ul>
                  </li>
                  <li class="nav-item dropdown">
                      <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                          Kategori Yönetimi
                      </a>
                      <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                          <li><a class="dropdown-item" asp-controller="Kategori" asp-action="Create"><i class="bi bi-plus-circle-fill"></i> Yeni Kategori Ekle</a></li>
                          <li><a class="dropdown-item" asp-controller="Kategori" asp-action="Index"><i class="bi bi-list"></i> Kategorileri Listele</a></li>
                      </ul>
                  </li>
                  
                  
              </ul>
         
              <a class="btn btn-secondary" asp-controller="Kullanici" asp-action="Logout">Çıkış Yap</a>
          </div>
        </div>
      </nav>
    </div>


    <div class="row py-3">
      <div class="col-9">
       @RenderBody()
      </div>

      <div class="col-3 py-3">
        <div class="input-group mb-3">
          <input type="text" class="form-control" placeholder="Aranacak kelime" aria-label="Aranacak kelime">
          <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="button" id="button-addon">Ara</button>
          </div>
        </div>
      
        <div class="list-group mb-3">
       
        </div>

        <h3>Bizi Takip Edin</h3>
          <div class="list-group mb-3">
            <a href="#" class="list-group-item list-group-item-action"><i class="bi bi-instagram"></i> Instagram</a>
            <a href="#" class="list-group-item list-group-item-action"><i class="bi bi-youtube"></i> Youtube</a>
            <a href="#" class="list-group-item list-group-item-action"><i class="bi bi-twitter"></i> Twitter</a>
          </div>
      </div>
    </div>

  </div>
<div class="row bg-dark text-light p-3">
     <footer>
        <div class="footer-content">
            <p>&copy; 2023 Web Sitesi. Tüm hakları saklıdır.</p>
          
        </div>
    </footer>
    </div>

  <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
 
</html>