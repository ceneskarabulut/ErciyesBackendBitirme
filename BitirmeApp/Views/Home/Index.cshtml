@model List<Makale>
@using Microsoft.AspNetCore.Http;

<h2>Makaleler</h2>
@using (Html.BeginForm("Filter", "Home", FormMethod.Get))
{
     @Html.Label("Kategori:")
    <div class="form-group" style=" display: flex; justify-content: space-between; align-items: center; ">
     
        <div class="col-10" style="margin-bottom: 20px;">
            
            @Html.DropDownList("KategoriId", ViewBag.Kategoriler as SelectList, "Seçiniz", new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary" style="margin-left: 10px; margin-bottom: 20px;">Filtrele</button>
    </div>
}

<div class="row">
    @foreach (var makale in Model)
    {
        <div class="col-md-4">
            
                <img src="~/resimler/makaleler/@makale.Resim" alt="makale" width="150" height="150">
                <hr>
        </div>
        
        <div class="col-md-8">
                <div class="card-body">
            
                    <a  href="/Makale/Details/@makale.MakaleId" class="card-title">@makale.Baslik</a>
                    <p class="card-title">@makale.İcerik</p>
                   
                </div>
  </div>
    } 
    
</div>

